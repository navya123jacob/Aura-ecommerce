<%- include('../layouts/header') %>
<%- include('../layouts/Login/loginHeader') %>
<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('/assets/images/backgrounds/login-bg.jpg')">
    <div class="container" >
        <div class="form-box" style="background-color: rgba(255, 255, 255, 0.5);">
            <div class="form-tab" >
                <h3>Login</h3>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                        <form action="/userLogin" style="color: black;" method="POST" onsubmit="return validateForm()">
                            <div class="form-group">
                                <label for="register-email-2">Your email address *</label>
                                <input type="email" class="form-control" id="register-email-2" name="reg_email" >
                                <small id="emailError" class="text-danger"></small>
                            </div><!-- End .form-group -->

                            <div class="form-group">
                                <label for="register-password-2">Password *</label>
                                <div class="input-group">
                                <input type="password" class="form-control" id="register-password-2" name="reg_password" >
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <input type="checkbox" id="password-toggle" onclick="togglePassword()">
                                        <label for="password-toggle"></label>
                                    </div>
                                </div>
                            </div>
                            <small id="passwordError" class="text-danger"></small>
                        </div><!-- End .form-group -->

                            <div class="form-footer">
                                <button type="submit" class="btn btn-outline-dark-2">
                                    <span>LOGIN</span>
                                    <i class="icon-long-arrow-right"></i>
                                </button>

                            </div><!-- End .form-footer -->
                        </form>
                        <div class="form-choice">
                            <p >If you do not have an account</p>
                            <div class="row">
                                <div class="col-sm-6 ">
                                    <a href="/register" class="btn btn-login btn-g">
                                        <i class="icon-google"></i>
                                        Register
                                    </a>
                                </div><!-- End .col-6 -->
                                
                            </div><!-- End .row -->
                        </div><!-- End .form-choice -->
                    </div><!-- .End .tab-pane -->
                </div><!-- End .tab-content -->
            </div><!-- End .form-tab -->
            <h6 class="text-danger"><%=message%></h6>
        </div><!-- End .form-box -->
    </div><!-- End .container -->
</div><!-- End .login-page section-bg -->
</main><!-- End .main -->

</div><!-- End .page-wrapper -->
<button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

<%- include('../layouts/Login/LoginMob') %>
<script> 
 function validateForm() {
        const email = document.getElementById('register-email-2').value;
        const password = document.getElementById('register-password-2').value;

        const emailError = document.getElementById('emailError');
        const passwordError = document.getElementById('passwordError');
        let isvalid=true

        // Email validation
        if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
            emailError.textContent = 'Please enter a valid email address.';
            isvalid=false;
        } else {
            emailError.textContent = '';
        }

        // Password validation
        if (!/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{6,}$/.test(password)) {
            passwordError.textContent = 'Password must be at least 6 characters and include at least one uppercase letter, one lowercase letter, one number, and one special character.';
            isvalid=false;
        } else {
            passwordError.textContent = '';
        }

        return isvalid;
    }
    function togglePassword() {
        var passwordInput = document.getElementById("register-password-2");
        // Toggle the password visibility
        passwordInput.type = (passwordInput.type === "password") ? "text" : "password";
    }
    </script>




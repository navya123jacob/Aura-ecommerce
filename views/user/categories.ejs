                                        <a data-toggle="collapse" href="#widget-price" role="button" aria-expanded="true" aria-controls="widget-price">
                                            Price
                                        </a>
                                    </h3>
                                    <div class="collapse show" id="widget-price">
                                        <div class="widget-body">
                                            <div class="filter-price">
                                                <div class="filter-price-text">
                                                    Price Range:
                                                    <span id="filter-price-range"></span>
                                                </div>
                                                <div id="price-slider"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        
                                <!-- ... Other filters ... -->
                            </div>
                        </aside>
                                            </div><!-- End .row -->
                </div><!-- End .container -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
        <script>
          function searchProducts() {
    // Get the search query from the input field
    const searchQuery = document.getElementById('searchInput').value.toLowerCase();

    // Get all product cards
    const productCards = document.querySelectorAll('.product-2');

    // Loop through each product card and hide/show based on the product name
    productCards.forEach(productCard => {
      // Extract the product name from the product card
      const productName = productCard.querySelector('.product-title a').textContent.toLowerCase();

      // Check if the product name contains the search query
      const productNameMatches = productName.startsWith(searchQuery);

      // If the product name matches the search query or the query is empty, display the product card
      if (productNameMatches || searchQuery === '') {
        productCard.style.display = 'block';
      } else {
       
        productCard.style.display = 'none';
      }
    });
  }
  
          </script>
          
